        private void button2_Click(object sender, EventArgs e)
        {

            //listBox1.Items.Add("Ordu");

            //yoksda ekle
            if (!listBox1.Items.Contains(txtSehir.Text))
                listBox1.Items.Add(txtSehir.Text);
        }
      
      
